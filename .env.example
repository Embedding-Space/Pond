# Pond REST API Configuration
# Copy this file to .env and update with your values

# Required: Database connection (must be accessible from container)
DATABASE_URL=postgresql://postgres:password@host.docker.internal:5432/pond

# Required: Ollama endpoint (must be accessible from container)
OLLAMA_URL=http://host.docker.internal:11434
EMBEDDING_PROVIDER=ollama
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# Optional: Ollama embedding timeout (in seconds)
# 60 = safe for cold starts when model needs to load
# 5-10 = reasonable for warm Ollama
# 2-3 = for testing timeout behavior (you masochist)
OLLAMA_EMBEDDING_TIMEOUT=60

# Optional: API configuration
PORT=19100

# Optional: Other settings
POND_TIMEZONE=America/Los_Angeles
DB_POOL_SIZE=10
LOG_LEVEL=INFO
LOG_FORMAT=json

# Note: Use host.docker.internal to connect to services on your host machine from Docker